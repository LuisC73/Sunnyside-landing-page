---
import type { SectionProps } from '@types';
import Link from '../ui/Link.astro';

const { tag = 'h2', title, description, link, image, orientation } = Astro.props as SectionProps;

const Tag = tag;
const bgClass = `bg-[url('${image.mobile}')] md:bg-[url('${image.desktop}')]`;
---

<section class="grid grid-cols-1 md:grid-cols-2">
  <div
    class={`bg-primary-white px-5 md:px-10 lg:px-20 py-40 flex flex-col gap-5 items-center md:items-start order-2 ${orientation === 'Left' ? 'md:order-2' : 'md:order-1'}`}
  >
    <Tag
      class="font-frauces font-bold text-4xl md:text-5xl text-center md:text-left text-secondary-desaturated-blue tracking-normal"
      >{title}</Tag
    >
    <p class="font-barlow text-secondary-dark-blue text-center md:text-left">{description}</p>
    <Link {...link} />
  </div>
  <div
    class={`h-[400px] md:h-full ${bgClass} bg-no-repeat bg-cover bg-center order-1 ${orientation === 'Left' ? 'md:order-1' : 'md:order-2'}`}
  >
  </div>
</section>
