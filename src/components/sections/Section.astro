---
import type { SectionProps } from '@types';
import Link from '../ui/Link.astro';

const { tag = 'h2', title, description, link, image, orientation } = Astro.props as SectionProps;

const Tag = tag;
const bgClass = `bg-[url('${image.mobile}')] md:bg-[url('${image.desktop}')]`;
---

<section class="grid grid-cols-1 md:grid-cols-2">
  <div
    class={`bg-primary-white px-20 py-40 flex flex-col gap-5 ${orientation === 'Left' && 'order-2'}`}
  >
    <Tag class="font-frauces font-bold text-5xl">{title}</Tag>
    <p class="font-barlow">{description}</p>
    <Link {...link} />
  </div>
  <div class={`${bgClass} bg-no-repeat bg-cover bg-center ${orientation === 'Left' && 'order-1'}`}>
  </div>
</section>
