---
import type { HomeProps } from '@types';
import ArrowDown from '../ui/ArrowDown.astro';

const { image, title, arrow } = Astro.props as HomeProps;

const bgClass = `bg-[url('${image.mobile}')] md:bg-[url('${image.desktop}')]`;
---

<section
  class={`w-full min-h-screen ${bgClass} flex flex-col gap-24 items-center justify-center bg-cover bg-center bg-no-repeat`}
>
  <h1
    class="font-frauces text-4xl md:text-5xl lg:text-6xl md:text-[52px] tracking-[8px] text-white uppercase font-bold text-center"
  >
    {title}
  </h1>
  <div class="flex items-center justify-center">
    <ArrowDown {...arrow} />
  </div>
</section>
