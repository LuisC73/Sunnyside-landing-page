---
import type { CardProps } from '@types';
import { Image } from 'astro:assets';

const { image, description, name, job } = Astro.props as CardProps;
---

<div class="flex flex-col gap-5 items-center">
  <div class="rounded-full overflow-hidden w-[80px] h-[80px]">
    <Image {...image} />
  </div>
  <p class="text-center font-barlow">{description}</p>
  <h4 class="font-frauces font-bold">{name}</h4>
  <p class="font-barlow text-sm">{job}</p>
</div>
