---
import type { HeaderProps } from '@types';
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';

const { logo, items, button } = Astro.props as HeaderProps;
---

<script>
  const buttonMenu = document.getElementById('buttonMenu');
  const menu = document.getElementById('menu');

  const toggleMenu = () => {
    menu?.classList.toggle('opacity-0');
  };

  buttonMenu?.addEventListener('click', toggleMenu);
</script>

<header class="fixed top-0 left-0 w-full flex items-center justify-between md:hidden p-5 z-20">
  <Image {...logo.mobile} />
  <div
    class="absolute top-20 left-1/2 w-[calc(100%_-_40px)] p-5 flex flex-col gap-5 items-center justify-center bg-white -translate-x-1/2"
    id="menu"
  >
    <div class="absolute -top-[25px] right-0 w-0 h-0 border-t-[25px] border-t-transparent border-r-[25px] border-white"></div>
    <ul class="flex flex-col gap-5 items-center justify-center">
      {
        items.map((item) => (
          <li>
            <a
              href={item.href}
              title={item.title}
              class="font-barlow text-lg font-medium text-secondary-dark-blue"
            >
              {item.label}
            </a>
          </li>
        ))
      }
    </ul>
    <a
      href={button.href}
      title={button.title}
      class="py-4 px-6 bg-primary-yellow rounded-full font-frauces font-bold uppercase text-base tracking-wide"
      >{button.label}</a
    >
  </div>
  <button
    id="buttonMenu"
    class="cursor-pointer"
  >
    <Icon name="hamburger" size={24} />
  </button>
</header>
