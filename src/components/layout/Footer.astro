---
import type { FooterProps } from '@types';
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';

const { logo, items, socialMedia } = Astro.props as FooterProps;
---

<footer class="bg-primary-cyan p-10 flex flex-col gap-10 items-center justify-center">
  <Image {...logo} />
  <ul class="flex flex-wrap gap-10 items-center justify-center">
    {
      items.map((item) => (
        <li>
          <a
            href={item.href}
            title={item.title}
            class="font-barlow text-primary-desaturated-cyan hover:text-white transition"
          >
            {item.label}
          </a>
        </li>
      ))
    }
  </ul>
  <ul class="flex flex-wrap gap-10 items-center justify-center">
    {
      socialMedia.map((item) => (
        <li>
          <a
            href={item.href}
            title={item.title}
            aria-label={item.ariaLabel}
            class="inline-flex items-center justify-center group"
          >
            <Icon
              name={item.icon}
              size={18}
              class="text-primary-desaturated-cyan group-hover:text-white transition"
            />
          </a>
        </li>
      ))
    }
  </ul>
</footer>
